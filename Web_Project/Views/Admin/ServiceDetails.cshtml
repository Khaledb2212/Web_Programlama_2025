@model Web_Project.Models.ServiceDTO

@{
    ViewData["Title"] = "Service Details";
}

<div class="mx-auto max-w-4xl px-4 py-8">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Service Details</h1>
            <p class="mt-1 text-sm text-slate-600">Read-only information about this service.</p>
        </div>

        <div class="flex flex-wrap gap-2">
            <a asp-action="EditService" asp-route-id="@Model.ServiceID"
               class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                Edit
            </a>

            <a asp-action="Services"
               class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                Back to Services
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-900">@Model.ServiceName</p>
            <p class="mt-1 text-xs text-slate-600">ServiceID: @Model.ServiceID</p>
        </div>

        <div class="px-6 py-6 space-y-4">
            <div class="grid gap-4 sm:grid-cols-2">
                <div class="rounded-xl border border-slate-200 bg-white p-4">
                    <p class="text-xs text-slate-500">Service Name</p>
                    <p class="mt-1 text-sm font-semibold text-slate-900">@Model.ServiceName</p>
                </div>

                <div class="rounded-xl border border-slate-200 bg-white p-4">
                    <p class="text-xs text-slate-500">Fee / Hour</p>
                    <p class="mt-1 text-sm font-semibold text-slate-900">@($"${Model.FeesPerHour}")</p>
                </div>

                <div class="rounded-xl border border-slate-200 bg-white p-4 sm:col-span-2">
                    <p class="text-xs text-slate-500">Details</p>
                    @if (string.IsNullOrWhiteSpace(Model.Details))
                    {
                            <p class="mt-1 text-sm text-slate-600">No details provided.</p>
                    }
                    else
                    {
                            <p class="mt-1 text-sm text-slate-900 whitespace-pre-line">@Model.Details</p>
                    }
                </div>
            </div>

            <div class="pt-2">
                <form asp-action="DeleteService" method="post" onsubmit="return confirm('Delete this service?');"
                      class="flex justify-end">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.ServiceID" />
                    <button type="submit"
                            class="rounded-xl border border-red-200 bg-white px-4 py-2 text-sm font-semibold text-red-700 shadow-sm hover:bg-red-50">
                        Delete Service
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
