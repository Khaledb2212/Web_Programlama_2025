@model Web_Project.Models.ServiceDTO

@{
    ViewData["Title"] = "Edit Service";
}

<div class="mx-auto max-w-4xl px-4 py-8">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Edit Service</h1>
            <p class="mt-1 text-sm text-slate-600">Update service info and hourly fee.</p>
        </div>

        <a asp-action="Services"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back to Services
        </a>
    </div>

    <div class="mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-900">Editing: @Model.ServiceName</p>
            <p class="mt-1 text-xs text-slate-600">ServiceID: @Model.ServiceID</p>
        </div>

        <form asp-action="EditService" method="post" class="px-6 py-6">
            @Html.AntiForgeryToken()

            <input asp-for="ServiceID" type="hidden" />

            <div asp-validation-summary="ModelOnly"
                 class="mb-5 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"></div>

            <div class="grid gap-4">
                <div>
                    <label asp-for="ServiceName" class="text-sm font-medium text-slate-700"></label>
                    <input asp-for="ServiceName"
                           class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="ServiceName" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="FeesPerHour" class="text-sm font-medium text-slate-700"></label>
                    <div class="relative mt-1">
                        <span class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3 text-sm text-slate-500">$</span>
                        <input asp-for="FeesPerHour" type="number" step="0.01" min="0"
                               class="w-full rounded-xl border border-slate-200 bg-white pl-7 pr-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    </div>
                    <span asp-validation-for="FeesPerHour" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Details" class="text-sm font-medium text-slate-700"></label>
                    <textarea asp-for="Details" rows="4"
                              class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"></textarea>
                    <span asp-validation-for="Details" class="mt-1 block text-xs text-red-600"></span>
                </div>
            </div>

            <div class="mt-6 flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
                <a asp-action="Services"
                   class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                    Cancel
                </a>

                <button type="submit"
                        class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
