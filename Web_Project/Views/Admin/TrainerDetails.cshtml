@model Web_Project.Models.TrainerDTO

@{
    ViewData["Title"] = "Trainer Details";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Trainer Details</h1>
            <p class="mt-1 text-sm text-slate-600">
                Viewing profile and assigned services for
                <span class="font-semibold text-slate-900">@Model.FirstName @Model.LastName</span>.
            </p>
        </div>

        <div class="flex gap-2">
            <a asp-action="Trainers"
               class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                Back to Trainers
            </a>

            <a asp-action="EditTrainer" asp-route-id="@Model.TrainerID"
               class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                Edit
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 grid gap-6 lg:grid-cols-3">
        <!-- LEFT: Profile (Read-only like Edit layout) -->
        <div class="lg:col-span-2 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                <p class="text-sm font-semibold text-slate-900">Profile Information</p>
                <p class="mt-1 text-xs text-slate-600">Trainer personal info and bio.</p>
            </div>

            <div class="px-6 py-6">
                <input type="hidden" asp-for="TrainerID" />
                <input type="hidden" asp-for="PersonID" />

                <div class="grid gap-4 sm:grid-cols-2">
                    <div>
                        <p class="text-sm font-medium text-slate-700">First Name</p>
                        <div class="mt-1 w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-900">
                            @(string.IsNullOrWhiteSpace(Model.FirstName) ? "—" : Model.FirstName)
                        </div>
                    </div>

                    <div>
                        <p class="text-sm font-medium text-slate-700">Last Name</p>
                        <div class="mt-1 w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-900">
                            @(string.IsNullOrWhiteSpace(Model.LastName) ? "—" : Model.LastName)
                        </div>
                    </div>


                    <div class="sm:col-span-2">
                        <p class="text-sm font-medium text-slate-700">Phone</p>
                        <div class="mt-1 w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-900">
                            @(string.IsNullOrWhiteSpace(Model.Phone) ? "—" : Model.Phone)
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <p class="text-sm font-medium text-slate-700">Expertise Areas</p>
                        <div class="mt-1 w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-900">
                            @(string.IsNullOrWhiteSpace(Model.ExpertiseAreas) ? "—" : Model.ExpertiseAreas)
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <p class="text-sm font-medium text-slate-700">Description</p>
                        <div class="mt-1 w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-3 text-sm text-slate-900 whitespace-pre-line">
                            @(string.IsNullOrWhiteSpace(Model.Description) ? "—" : Model.Description)
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
                    <a asp-action="Trainers"
                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                        Back
                    </a>

                    <a asp-action="EditTrainer" asp-route-id="@Model.TrainerID"
                       class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                        Edit Trainer
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT: Skills (Read-only) -->
        <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                <p class="text-sm font-semibold text-slate-900">Assigned Services</p>
                <p class="mt-1 text-xs text-slate-600">Services assigned to this trainer.</p>
            </div>

            <div class="px-6 py-6">
                @if (Model.AssignedSkills != null && Model.AssignedSkills.Any())
                {
                        <ul class="space-y-2">
                        @foreach (var skill in Model.AssignedSkills)
                        {
                                    <li class="flex items-center justify-between rounded-xl border border-slate-200 bg-white px-4 py-3">
                                        <div class="min-w-0">
                                            <p class="truncate text-sm font-semibold text-slate-900">
                                        @(string.IsNullOrWhiteSpace(skill.ServiceName) ? "Unknown Service" : skill.ServiceName)
                                            </p>
                                            <p class="text-xs text-slate-500">Assigned</p>
                                        </div>
                                    </li>
                        }
                        </ul>
                }
                else
                {
                        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-6 text-center">
                            <p class="text-sm font-semibold text-slate-900">No services yet</p>
                            <p class="mt-1 text-xs text-slate-500">This trainer has no assigned services.</p>
                        </div>
                }
            </div>
        </div>
    </div>
</div>
