@model Web_Project.Models.TrainerDTO

@{
    ViewData["Title"] = "Edit Trainer";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Edit Trainer</h1>
            <p class="mt-1 text-sm text-slate-600">Manage profile and assigned services for <span class="font-semibold text-slate-900">@Model.FirstName @Model.LastName</span>.</p>
        </div>

        <a asp-action="Trainers"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back to Trainers
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 grid gap-6 lg:grid-cols-3">
        <!-- LEFT: Profile -->
        <div class="lg:col-span-2 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                <p class="text-sm font-semibold text-slate-900">Profile Information</p>
                <p class="mt-1 text-xs text-slate-600">Update trainer personal info and bio.</p>
            </div>

            <form asp-action="EditTrainer" method="post" class="px-6 py-6">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly"
                     class="mb-5 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"></div>

                <input type="hidden" asp-for="TrainerID" />
                <input type="hidden" asp-for="PersonID" />
                <!-- If your backend requires Password, keep this hidden value -->
                <input type="hidden" asp-for="Password" value="Ignore123!" />

                <div class="grid gap-4 sm:grid-cols-2">
                    <div>
                        <label asp-for="FirstName" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="FirstName"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                        <span asp-validation-for="FirstName" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="LastName"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                        <span asp-validation-for="LastName" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="Phone" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="Phone"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                        <span asp-validation-for="Phone" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="ExpertiseAreas" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="ExpertiseAreas"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                        <span asp-validation-for="ExpertiseAreas" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="Description" class="text-sm font-medium text-slate-700"></label>
                        <textarea asp-for="Description" rows="5"
                                  class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"></textarea>
                        <span asp-validation-for="Description" class="mt-1 block text-xs text-red-600"></span>
                    </div>
                </div>

                <div class="mt-6 flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
                    <a asp-action="Trainers"
                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                        Cancel
                    </a>

                    <button type="submit"
                            class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>

        <!-- RIGHT: Skills -->
        <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                <p class="text-sm font-semibold text-slate-900">Assigned Services</p>
                <p class="mt-1 text-xs text-slate-600">Add or remove services for this trainer.</p>
            </div>

            <div class="px-6 py-6">
                <!-- Assigned list -->
                @if (Model.AssignedSkills != null && Model.AssignedSkills.Any())
                {
                        <ul class="space-y-2">
                        @foreach (var skill in Model.AssignedSkills)
                        {
                                    <li class="flex items-center justify-between rounded-xl border border-slate-200 bg-white px-4 py-3">
                                        <div class="min-w-0">
                                            <p class="truncate text-sm font-semibold text-slate-900">@skill.ServiceName</p>
                                            <p class="text-xs text-slate-500">Assigned</p>
                                        </div>

                                        <form asp-action="RemoveSkillFromTrainer" method="post" class="ml-3">
                                    @Html.AntiForgeryToken()
                                            <input type="hidden" name="skillId" value="@skill.Id" />
                                            <input type="hidden" name="trainerId" value="@Model.TrainerID" />

                                            <button type="submit"
                                                    class="inline-flex items-center justify-center rounded-xl border border-red-200 bg-white px-3 py-2 text-xs font-semibold text-red-700 hover:bg-red-50"
                                                    title="Remove"
                                                    onclick="return confirm('Remove this service from the trainer?');">
                                                Remove
                                            </button>
                                        </form>
                                    </li>
                        }
                        </ul>
                }
                else
                {
                        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-6 text-center">
                            <p class="text-sm font-semibold text-slate-900">No services yet</p>
                            <p class="mt-1 text-xs text-slate-500">Use the form below to add a service.</p>
                        </div>
                }

                <!-- Add new service -->
                <div class="mt-6 rounded-2xl border border-slate-200 bg-white p-4">
                    <p class="text-sm font-semibold text-slate-900">Add a service</p>
                    <p class="mt-1 text-xs text-slate-600">Select a service and attach it to this trainer.</p>

                    <form asp-action="AddSkillToTrainer" method="post" class="mt-3 flex flex-col gap-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="trainerId" value="@Model.TrainerID" />

                        @if (Model.AvailableServices != null && Model.AvailableServices.Any())
                        {
                                <select name="serviceId" asp-items="Model.AvailableServices"
                                        class="w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500">
                                    <option value="">Select Service</option>
                                </select>

                                <button type="submit"
                                        class="inline-flex w-full items-center justify-center rounded-xl bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                                    Add Service
                                </button>
                        }
                        else
                        {
                                <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                                    All available services are already assigned.
                                </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
