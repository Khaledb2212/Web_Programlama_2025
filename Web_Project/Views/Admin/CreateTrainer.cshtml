                   @model Web_Project.Models.TrainerDTO

@{
    ViewData["Title"] = "Create Trainer";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Create Trainer</h1>
            <p class="mt-1 text-sm text-slate-600">Create login + profile and assign trainer services.</p>
        </div>

        <a asp-action="Trainers"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back to Trainers
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-900">Trainer Setup</p>
            <p class="mt-1 text-xs text-slate-600">Fill the required fields, then select services.</p>
        </div>

        <form asp-action="CreateTrainer" method="post" class="px-6 py-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly"
                 class="mb-5 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"></div>

            <div class="grid gap-6">
                <!-- Login Credentials -->
                <section class="rounded-2xl border border-slate-200 bg-white p-5">
                    <div class="mb-4">
                        <p class="text-sm font-semibold text-slate-900">Login Credentials</p>
                        <p class="mt-1 text-xs text-slate-600">Used to sign in as Trainer.</p>
                    </div>

                    <div class="grid gap-4 sm:grid-cols-2">
                        <div class="sm:col-span-2">
                            <label asp-for="Email" class="text-sm font-medium text-slate-700"></label>
                            <input asp-for="Email" type="email"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="trainer@gym.com" />
                            <span asp-validation-for="Email" class="mt-1 block text-xs text-red-600"></span>
                        </div>

                        <div class="sm:col-span-2">
                            <label asp-for="Password" class="text-sm font-medium text-slate-700"></label>
                            <input asp-for="Password" type="password"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="••••••••" />
                            <span asp-validation-for="Password" class="mt-1 block text-xs text-red-600"></span>
                            <p class="mt-1 text-xs text-slate-500">Minimum 6 characters.</p>
                        </div>
                    </div>
                </section>

                <!-- Personal Details -->
                <section class="rounded-2xl border border-slate-200 bg-white p-5">
                    <div class="mb-4">
                        <p class="text-sm font-semibold text-slate-900">Profile</p>
                        <p class="mt-1 text-xs text-slate-600">Trainer information shown to members.</p>
                    </div>

                    <div class="grid gap-4 sm:grid-cols-2">
                        <div>
                            <label asp-for="FirstName" class="text-sm font-medium text-slate-700"></label>
                            <input asp-for="FirstName"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="First name" />
                            <span asp-validation-for="FirstName" class="mt-1 block text-xs text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="LastName" class="text-sm font-medium text-slate-700"></label>
                            <input asp-for="LastName"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="Last name" />
                            <span asp-validation-for="LastName" class="mt-1 block text-xs text-red-600"></span>
                        </div>

                        <div class="sm:col-span-2">
                            <label asp-for="Phone" class="text-sm font-medium text-slate-700"></label>
                            <input asp-for="Phone"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="+90 5xx xxx xx xx" />
                            <span asp-validation-for="Phone" class="mt-1 block text-xs text-red-600"></span>
                        </div>

                        <div class="sm:col-span-2">
                            <label asp-for="ExpertiseAreas" class="text-sm font-medium text-slate-700"></label>
                            <input asp-for="ExpertiseAreas"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="e.g., Yoga, HIIT" />
                            <span asp-validation-for="ExpertiseAreas" class="mt-1 block text-xs text-red-600"></span>
                        </div>

                        <div class="sm:col-span-2">
                            <label asp-for="Description" class="text-sm font-medium text-slate-700"></label>
                            <textarea asp-for="Description" rows="4"
                                      class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                      placeholder="Short bio, certifications, training style..."></textarea>
                            <span asp-validation-for="Description" class="mt-1 block text-xs text-red-600"></span>
                        </div>
                    </div>
                </section>

                <!-- Assign Services -->
                <section class="rounded-2xl border border-slate-200 bg-white p-5">
                    <div class="mb-4">
                        <p class="text-sm font-semibold text-slate-900">Assign Services</p>
                        <p class="mt-1 text-xs text-slate-600">Select which services this trainer can perform.</p>
                    </div>

                    @if (Model.AvailableServices != null && Model.AvailableServices.Any())
                    {
                            <div class="grid gap-3 sm:grid-cols-2">
                            @foreach (var service in Model.AvailableServices)
                            {
                                        <label for="service_@service.Value"
                                               class="flex items-center justify-between rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm hover:bg-slate-50 cursor-pointer">
                                            <span class="font-medium text-slate-900">@service.Text</span>

                                            <input id="service_@service.Value"
                                                   name="SelectedServiceIds"
                                                   type="checkbox"
                                                   value="@service.Value"
                                                   class="h-4 w-4 rounded border-slate-300 text-emerald-600 focus:ring-emerald-500" />
                                        </label>
                            }
                            </div>

                            <p class="mt-3 text-xs text-slate-500">
                                You can edit skills later from the trainer edit screen.
                            </p>
                    }
                    else
                    {
                            <div class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                                No services available. Please create services first.
                            </div>
                    }
                </section>

                <!-- Actions -->
                <div class="flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
                    <a asp-action="Trainers"
                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                        Cancel
                    </a>

                    <button type="submit"
                            class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                        Create Trainer
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
