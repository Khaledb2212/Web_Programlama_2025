@model Web_Project.Models.TrainerPortalVm

@{
    ViewData["Title"] = "Trainer Portal";
    string DayName(int d) => d switch
    {
        0 => "Sunday",
        1 => "Monday",
        2 => "Tuesday",
        3 => "Wednesday",
        4 => "Thursday",
        5 => "Friday",
        6 => "Saturday",
        _ => "Unknown"
    };
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Trainer Portal</h1>
            <p class="mt-1 text-sm text-slate-600">Manage your slots, approve appointments, and update your profile.</p>
        </div>

        <a asp-controller="Home" asp-action="Index"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 grid gap-6 lg:grid-cols-3">
        <!-- LEFT COLUMN -->
        <div class="space-y-6 lg:col-span-1">
            <!-- Update Profile -->
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">Update Profile</p>
                    <p class="mt-1 text-xs text-slate-600">Expertise + bio shown to members.</p>
                </div>

                <form asp-action="UpdateProfile" method="post" class="px-6 py-6 space-y-4">
                    @Html.AntiForgeryToken()

                    <div>
                        <label class="text-sm font-medium text-slate-700">Expertise Areas</label>
                        <input name="expertiseAreas"
                                 value="@(Model.ExpertiseAreas ?? "")"
                                 class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                 placeholder="e.g., Yoga, HIIT, Boxing" />
                        <p class="mt-1 text-xs text-slate-500">Required.</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-slate-700">Description</label>
                        <textarea name="description" rows="4"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                   placeholder="Short bio, certifications, style...">@(Model.Description ?? "")</textarea>

                    </div>

                    <button type="submit"
                            class="inline-flex w-full items-center justify-center rounded-xl bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                        Save Profile
                    </button>
                </form>
            </div>

            <!-- Add Slot -->
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">Add Availability Slot</p>
                    <p class="mt-1 text-xs text-slate-600">Create a weekly working slot.</p>
                </div>

                <form asp-action="AddSlot" method="post" class="px-6 py-6 space-y-4">
                    @Html.AntiForgeryToken()

                    <div>
                        <label class="text-sm font-medium text-slate-700">Service</label>
                        <select asp-for="ServiceTypeId" asp-items="Model.Services"
                                class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500">
                            <option value="0">Select Service</option>
                        </select>
                        <span asp-validation-for="ServiceTypeId" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-slate-700">Day of Week</label>
                        <select asp-for="DayOfWeek"
                                class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500">
                            <option value="0">Sunday</option>
                            <option value="1">Monday</option>
                            <option value="2">Tuesday</option>
                            <option value="3">Wednesday</option>
                            <option value="4">Thursday</option>
                            <option value="5">Friday</option>
                            <option value="6">Saturday</option>
                        </select>
                        <span asp-validation-for="DayOfWeek" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div class="grid gap-4 sm:grid-cols-2">
                        <div>
                            <label class="text-sm font-medium text-slate-700">Start Time</label>
                            <input asp-for="StartTime" type="time"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                            <span asp-validation-for="StartTime" class="mt-1 block text-xs text-red-600"></span>
                        </div>

                        <div>
                            <label class="text-sm font-medium text-slate-700">End Time</label>
                            <input asp-for="EndTime" type="time"
                                   class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                            <span asp-validation-for="EndTime" class="mt-1 block text-xs text-red-600"></span>
                        </div>
                    </div>

                    <button type="submit"
                            class="inline-flex w-full items-center justify-center rounded-xl bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                        Add Slot
                    </button>

                    <p class="text-xs text-slate-500">
                        Note: Slots repeat weekly (based on Day + Time).
                    </p>
                </form>
            </div>
        </div>

        <!-- RIGHT COLUMN -->
        <div class="space-y-6 lg:col-span-2">
            <!-- My Slots -->
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">My Slots</p>
                    <p class="mt-1 text-xs text-slate-600">Your weekly availability list.</p>
                </div>

                @if (Model.MySlots == null || !Model.MySlots.Any())
                {
                        <div class="p-6 text-sm text-slate-700">No slots found.</div>
                }
                else
                {
                        <div class="overflow-x-auto">
                            <table class="min-w-full text-left text-sm">
                                <thead class="bg-white text-slate-700">
                                    <tr class="border-b border-slate-200">
                                        <th class="px-5 py-3 font-semibold">Day</th>
                                        <th class="px-5 py-3 font-semibold">Time</th>
                                        <th class="px-5 py-3 font-semibold">Service</th>
                                        <th class="px-5 py-3 font-semibold text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-200">
                                @foreach (var s in Model.MySlots.OrderBy(x => x.DayOfWeek).ThenBy(x => x.StartTime))
                                {
                                            <tr class="hover:bg-slate-50">
                                                <td class="px-5 py-3 font-medium text-slate-900">@DayName(s.DayOfWeek)</td>
                                                <td class="px-5 py-3 text-slate-700">@s.StartTime - @s.EndTime</td>
                                                <td class="px-5 py-3 text-slate-700">@s.ServiceName</td>
                                                <td class="px-5 py-3">
                                                    <div class="flex justify-end">
                                                        <form asp-action="RemoveSlot" method="post"
                                                              onsubmit="return confirm('Remove this slot?');">
                                                    @Html.AntiForgeryToken()
                                                            <input type="hidden" name="availabilityId" value="@s.AvailabilityId" />
                                                            <button type="submit"
                                                                    class="rounded-xl border border-red-200 bg-white px-3 py-2 text-xs font-semibold text-red-700 hover:bg-red-50">
                                                                Remove
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                }
            </div>

            <!-- Pending Appointments -->
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">Pending Appointments</p>
                    <p class="mt-1 text-xs text-slate-600">Approve requests waiting for confirmation.</p>
                </div>

                @if (Model.PendingAppointments == null || !Model.PendingAppointments.Any())
                {
                        <div class="p-6 text-sm text-slate-700">No pending appointments.</div>
                }
                else
                {
                        <div class="overflow-x-auto">
                            <table class="min-w-full text-left text-sm">
                                <thead class="bg-white text-slate-700">
                                    <tr class="border-b border-slate-200">
                                        <th class="px-5 py-3 font-semibold">Date</th>
                                        <th class="px-5 py-3 font-semibold">Time</th>
                                        <th class="px-5 py-3 font-semibold">Member</th>
                                        <th class="px-5 py-3 font-semibold">Service</th>
                                        <th class="px-5 py-3 font-semibold text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-200">
                                @foreach (var a in Model.PendingAppointments.OrderBy(x => x.StartTime))
                                {
                                            <tr class="hover:bg-slate-50">
                                                <td class="px-5 py-3 text-slate-700">@a.StartTime.ToString("yyyy-MM-dd")</td>
                                                <td class="px-5 py-3 text-slate-700">@a.StartTime.ToString("HH:mm") - @a.EndTime.ToString("HH:mm")</td>
                                                <td class="px-5 py-3 font-medium text-slate-900">@a.MemberName</td>
                                                <td class="px-5 py-3 text-slate-700">@a.ServiceName</td>
                                                <td class="px-5 py-3">
                                                    <div class="flex justify-end gap-2">
                                                        <form asp-action="ApproveAppointment" method="post">
                                                    @Html.AntiForgeryToken()
                                                            <input type="hidden" name="appointmentId" value="@a.AppointmentID" />
                                                            <button type="submit"
                                                                    class="rounded-xl bg-emerald-600 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-emerald-500">
                                                                Approve
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                }
            </div>

            <!-- Upcoming Approved -->
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">Upcoming Approved</p>
                    <p class="mt-1 text-xs text-slate-600">Your next confirmed sessions.</p>
                </div>

                @if (Model.UpcomingApprovedAppointments == null || !Model.UpcomingApprovedAppointments.Any())
                {
                        <div class="p-6 text-sm text-slate-700">No upcoming approved appointments.</div>
                }
                else
                {
                        <div class="overflow-x-auto">
                            <table class="min-w-full text-left text-sm">
                                <thead class="bg-white text-slate-700">
                                    <tr class="border-b border-slate-200">
                                        <th class="px-5 py-3 font-semibold">Date</th>
                                        <th class="px-5 py-3 font-semibold">Time</th>
                                        <th class="px-5 py-3 font-semibold">Member</th>
                                        <th class="px-5 py-3 font-semibold">Service</th>
                                        <th class="px-5 py-3 font-semibold">Fee</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-200">
                                @foreach (var a in Model.UpcomingApprovedAppointments.OrderBy(x => x.StartTime))
                                {
                                            <tr class="hover:bg-slate-50">
                                                <td class="px-5 py-3 text-slate-700">@a.StartTime.ToString("yyyy-MM-dd")</td>
                                                <td class="px-5 py-3 text-slate-700">@a.StartTime.ToString("HH:mm") - @a.EndTime.ToString("HH:mm")</td>
                                                <td class="px-5 py-3 font-medium text-slate-900">@a.MemberName</td>
                                                <td class="px-5 py-3 text-slate-700">@a.ServiceName</td>
                                                <td class="px-5 py-3 text-slate-700">@a.Fee</td>
                                            </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
