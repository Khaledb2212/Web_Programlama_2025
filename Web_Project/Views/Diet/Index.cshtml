@* @model Web_Project.Models.DietAnalysisVm

@{
    ViewData["Title"] = "AI Diet Planner";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">AI Personal Trainer</h1>
            <p class="mt-1 text-sm text-slate-600">Upload a photo or enter your stats to generate a diet & exercise plan.</p>
        </div>

        <a asp-controller="Home" asp-action="Index"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 grid gap-6 lg:grid-cols-2">
        <!-- Input Card -->
        <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                <p class="text-sm font-semibold text-slate-900">Input</p>
                <p class="mt-1 text-xs text-slate-600">Choose one method: photo upload or manual stats.</p>
            </div>

            <div class="px-6 py-6">
                <!-- Tabs -->
                <div class="flex gap-2 rounded-2xl bg-slate-100 p-1">
                    <button type="button" onclick="switchTab('photo')" id="tab-photo"
                            class="flex-1 rounded-xl px-3 py-2 text-sm font-semibold bg-white text-slate-900 shadow-sm">
                        📸 Upload Photo
                    </button>

                    <button type="button" onclick="switchTab('manual')" id="tab-manual"
                            class="flex-1 rounded-xl px-3 py-2 text-sm font-semibold text-slate-600 hover:text-slate-900">
                        📝 Enter Stats
                    </button>
                </div>

                <!-- NO AUTH HERE -->
                <form asp-action="Analyze" method="post" enctype="multipart/form-data" class="mt-6">
                    <div asp-validation-summary="ModelOnly"
                         class="mb-5 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"></div>

                    <!-- Photo -->
                    <div id="section-photo" class="space-y-4">
                        <div class="relative rounded-2xl border-2 border-dashed border-slate-300 bg-white p-6 text-center hover:bg-slate-50">
                            <input asp-for="Photo" type="file" accept="image/*"
                                   class="absolute inset-0 h-full w-full cursor-pointer opacity-0"
                                   onchange="previewImage(this)" />

                            <div id="upload-placeholder" class="space-y-2">
                                <p class="text-sm font-semibold text-slate-900">Click to upload a photo</p>
                                <p class="text-xs text-slate-600">JPG/PNG, clear lighting recommended.</p>
                            </div>

                            <img id="img-preview"
                                 src="@Model.ImageUrl"
                                 class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "hidden" : "") mx-auto mt-3 max-h-56 rounded-xl border border-slate-200 object-contain" />
                        </div>

                        <p class="text-xs text-slate-500">
                            Tip: If you don’t want to upload a photo, switch to “Enter Stats”.
                        </p>
                    </div>

                    <div class="mt-4 flex items-center gap-2">
                        <input asp-for="GeneratePreviewImage" type="checkbox"
                               class="h-4 w-4 rounded border-slate-300" />
                        <label asp-for="GeneratePreviewImage" class="text-sm text-slate-700">
                            Generate “Future Self” preview image (AI)
                        </label>
                    </div>

                    <!-- Manual -->
                    <div id="section-manual" class="hidden space-y-4">
                        <div class="grid gap-4 sm:grid-cols-2">
                            <div>
                                <label class="text-sm font-medium text-slate-700">Height (cm)</label>
                                <input asp-for="Height"
                                       class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                       placeholder="180" />
                            </div>

                            <div>
                                <label class="text-sm font-medium text-slate-700">Weight (kg)</label>
                                <input asp-for="Weight"
                                       class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                       placeholder="80" />
                            </div>

                            <div>
                                <label class="text-sm font-medium text-slate-700">Age</label>
                                <input asp-for="Age"
                                       class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                                       placeholder="25" />
                            </div>
                           
                        </div>
                    </div>

                    <div class="mt-6">
                        <button type="submit" id="btn-analyze"
                                class="w-full rounded-xl bg-emerald-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                            Generate AI Plan
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Result Card -->
        <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                <p class="text-sm font-semibold text-slate-900">AI Analysis Result</p>
                <p class="mt-1 text-xs text-slate-600">Your plan will show here after you submit.</p>
            </div>

            <div class="px-6 py-6">
                @if (!string.IsNullOrWhiteSpace(Model.AnalysisResult))
                {
                        <div class="rounded-2xl border border-slate-200 bg-white p-4 text-sm text-slate-700 whitespace-pre-line">
                        @Model.AnalysisResult
                        </div>
                }
                else
                {
                        <div class="flex h-64 flex-col items-center justify-center rounded-2xl border border-dashed border-slate-200 bg-slate-50">
                            <p class="text-sm font-semibold text-slate-700">No result yet</p>
                            <p class="mt-1 text-xs text-slate-500">Submit a photo or stats to generate a plan.</p>
                        </div>
                }
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.FuturePreviewImageUrl))
                    {
                <div class="mt-4">
                    <p class="text-sm font-semibold text-slate-900 mb-2">Future Self Preview</p>
                    <img src="@Model.FuturePreviewImageUrl"
                         class="w-full rounded-2xl border border-slate-200 object-contain" />
                </div>
                    }

        </div>
    </div>
</div>

<script>
    function switchTab(tab) {
        const photoSection = document.getElementById('section-photo');
        const manualSection = document.getElementById('section-manual');

        const tabPhoto = document.getElementById('tab-photo');
        const tabManual = document.getElementById('tab-manual');

        if (tab === 'photo') {
            photoSection.classList.remove('hidden');
            manualSection.classList.add('hidden');

            tabPhoto.classList.add('bg-white', 'text-slate-900', 'shadow-sm');
            tabPhoto.classList.remove('text-slate-600');

            tabManual.classList.remove('bg-white', 'text-slate-900', 'shadow-sm');
            tabManual.classList.add('text-slate-600');
        } else {
            photoSection.classList.add('hidden');
            manualSection.classList.remove('hidden');

            tabManual.classList.add('bg-white', 'text-slate-900', 'shadow-sm');
            tabManual.classList.remove('text-slate-600');

            tabPhoto.classList.remove('bg-white', 'text-slate-900', 'shadow-sm');
            tabPhoto.classList.add('text-slate-600');
        }
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const img = document.getElementById('img-preview');
                const placeholder = document.getElementById('upload-placeholder');

                img.src = e.target.result;
                img.classList.remove('hidden');
                placeholder.classList.add('hidden');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
