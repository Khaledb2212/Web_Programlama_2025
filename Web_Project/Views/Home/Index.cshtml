@{
    ViewData["Title"] = "Home";
}

<div class="min-h-[calc(100vh-4rem)] bg-white text-slate-900">
    <!-- HERO -->
    <section class="mx-auto max-w-6xl px-4 py-14 sm:py-20">
        <div class="grid items-center gap-10 lg:grid-cols-2">
            <!-- Left -->
            <div>
                <span class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-700">
                    <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                    Gym Booking & Management
                </span>

                <h1 class="mt-5 text-3xl font-semibold tracking-tight sm:text-5xl">
                    Train smarter. Book faster. Manage everything in one place.
                </h1>

                <p class="mt-4 max-w-xl text-base leading-7 text-slate-600 sm:text-lg">
                    Members can browse services and trainers, book sessions, and track appointments.
                    Trainers manage availability, approve requests, and update their profiles.
                </p>

                <div class="mt-7 flex flex-wrap gap-3">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        @if (User.IsInRole("Member"))
                        {
                                    <a asp-controller="AppointmentsMvc" asp-action="Book"
                                       class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                                        Book a Session
                                    </a>

                                    <a asp-controller="AppointmentsMvc" asp-action="MyAppointments"
                                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                                        My Appointments
                                    </a>
                        }
                        else if (User.IsInRole("Trainer"))
                        {
                                    <a asp-controller="Trainer" asp-action="Index"
                                       class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                                        Trainer Portal
                                    </a>

                                    <a asp-controller="TrainersMvc" asp-action="Index"
                                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                                        Public Trainers Page
                                    </a>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                                    <a asp-controller="Admin" asp-action="Index"
                                       class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                                        Admin Panel
                                    </a>

                                    <a asp-controller="ServicesMvc" asp-action="Index"
                                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                                        Manage Services
                                    </a>
                        }
                        else
                        {
                                    <a asp-controller="TrainersMvc" asp-action="Index"
                                       class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                                        Browse Trainers
                                    </a>

                                    <a asp-controller="ServicesMvc" asp-action="Index"
                                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                                        Browse Services
                                    </a>
                        }
                    }
                    else
                    {
                            <a asp-controller="TrainersMvc" asp-action="Index"
                               class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                                Browse Trainers
                            </a>

                            <a asp-controller="ServicesMvc" asp-action="Index"
                               class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                                Browse Services
                            </a>

                            <a asp-area="Identity" asp-page="/Account/Login"
                               class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                                Login
                            </a>

                            <a asp-area="Identity" asp-page="/Account/Register"
                               class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-sm font-semibold text-slate-700 underline underline-offset-4 hover:text-slate-900">
                                Create account
                            </a>
                    }
                </div>

                <div class="mt-8 flex flex-wrap items-center gap-x-6 gap-y-3 text-sm text-slate-600">
                    <div class="flex items-center gap-2">
                        <span class="h-1.5 w-1.5 rounded-full bg-slate-400"></span>
                        Fast booking flow
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="h-1.5 w-1.5 rounded-full bg-slate-400"></span>
                        Trainer approval system
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="h-1.5 w-1.5 rounded-full bg-slate-400"></span>
                        Role-based dashboards
                    </div>
                </div>
            </div>

            <!-- Right -->
            <div class="relative">
                <div class="absolute -inset-6 -z-10 rounded-3xl bg-gradient-to-tr from-emerald-500/15 via-sky-500/10 to-fuchsia-500/10 blur-2xl"></div>

                <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-xs font-medium text-slate-500">Quick start</p>
                            <p class="mt-1 text-lg font-semibold">How it works</p>
                        </div>
                        <span class="rounded-xl border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-600">
                            Gym v1
                        </span>
                    </div>

                    <div class="mt-6 space-y-3">
                        <div class="flex items-start gap-3 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                            <div class="mt-0.5 inline-flex h-7 w-7 items-center justify-center rounded-xl bg-emerald-600 text-xs font-bold text-white">
                                1
                            </div>
                            <div>
                                <p class="text-sm font-semibold text-slate-900">Browse services</p>
                                <p class="mt-1 text-sm text-slate-600">Pick what you want to train: PT, cardio, boxing, yoga…</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-3 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                            <div class="mt-0.5 inline-flex h-7 w-7 items-center justify-center rounded-xl bg-emerald-600 text-xs font-bold text-white">
                                2
                            </div>
                            <div>
                                <p class="text-sm font-semibold text-slate-900">Choose a trainer</p>
                                <p class="mt-1 text-sm text-slate-600">See expertise + description and select who fits your goals.</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-3 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                            <div class="mt-0.5 inline-flex h-7 w-7 items-center justify-center rounded-xl bg-emerald-600 text-xs font-bold text-white">
                                3
                            </div>
                            <div>
                                <p class="text-sm font-semibold text-slate-900">Book & get approved</p>
                                <p class="mt-1 text-sm text-slate-600">Trainer confirms the session → it appears as upcoming approved.</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                        <p class="text-sm font-semibold">Tip</p>
                        <p class="mt-1 text-sm text-slate-600">
                            If you’re a trainer, open the <span class="font-medium">Trainer Portal</span> to set your weekly slots and manage approvals.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTIONS -->
    <section class="mx-auto max-w-6xl px-4 pb-16">
        <div class="grid gap-6 md:grid-cols-3">
            <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                <p class="text-sm font-semibold text-slate-900">Services</p>
                <p class="mt-2 text-sm text-slate-600">
                    Clear service list with fees and details. Members can quickly find what they need.
                </p>
                <div class="mt-4">
                    <a asp-controller="ServicesMvc" asp-action="Index"
                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                        View Services
                    </a>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                <p class="text-sm font-semibold text-slate-900">Trainers</p>
                <p class="mt-2 text-sm text-slate-600">
                    Trainer profiles include expertise areas, short bio, and contact info (optional).
                </p>
                <div class="mt-4">
                    <a asp-controller="TrainersMvc" asp-action="Index"
                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                        View Trainers
                    </a>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                <p class="text-sm font-semibold text-slate-900">Appointments</p>
                <p class="mt-2 text-sm text-slate-600">
                    Booking, canceling, approvals, and upcoming schedule — all role-based.
                </p>
                <div class="mt-4 flex gap-2">
                    <a asp-controller="AppointmentsMvc" asp-action="Book"
                       class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                        Book
                    </a>
                    <a asp-controller="AppointmentsMvc" asp-action="MyAppointments"
                       class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-50">
                        My List
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
