 @page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="min-h-[calc(100vh-4rem)]">
    <div class="mx-auto max-w-6xl px-4 py-10 sm:py-14">
        <!-- Header -->
        <div class="mb-8">
            <span class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-700">
                <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                Account
            </span>
            <h1 class="mt-4 text-2xl font-semibold tracking-tight text-slate-900 sm:text-3xl">
                Log in
            </h1>
            <p class="mt-2 max-w-2xl text-sm text-slate-600">
                Welcome back. Enter your email and password to continue.
            </p>
        </div>

        <div class="grid gap-6 lg:grid-cols-2">
            <!-- Local login -->
            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">Use a local account</p>
                    <p class="mt-1 text-xs text-slate-600">Log in with your email and password.</p>
                </div>

                <form id="account" method="post" class="px-6 py-6 space-y-4">
                    <div asp-validation-summary="ModelOnly"
                         class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800"
                         role="alert">
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Input.Email" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="Input.Email"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="Input.Password" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="Input.Password"
                               type="password"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                               autocomplete="current-password"
                               aria-required="true"
                               placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <!-- Remember me -->
                    <div class="flex items-center justify-between gap-4">
                        <label asp-for="Input.RememberMe" class="inline-flex items-center gap-2 text-sm text-slate-700">
                            <input class="h-4 w-4 rounded border-slate-300 text-emerald-600 focus:ring-emerald-500"
                                   asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>

                        <a id="forgot-password" asp-page="./ForgotPassword"
                           class="text-sm font-medium text-emerald-700 hover:text-emerald-600">
                            Forgot password?
                        </a>
                    </div>

                    <button id="login-submit" type="submit"
                            class="inline-flex w-full items-center justify-center rounded-xl bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                        Log in
                    </button>

                    <div class="pt-2 text-sm text-slate-600">
                        <p>
                            Don’t have an account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                               class="font-semibold text-emerald-700 hover:text-emerald-600">
                                Create one
                            </a>
                        </p>

                        <p class="mt-2">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                               class="text-sm font-medium text-slate-700 hover:text-slate-900">
                                Resend email confirmation
                            </a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- External login -->
            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm overflow-hidden">
                <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
                    <p class="text-sm font-semibold text-slate-900">Use another service</p>
                    <p class="mt-1 text-xs text-slate-600">Optional: log in with external providers.</p>
                </div>

                <div class="px-6 py-6">
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                                    <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4 text-sm text-slate-700">
                                        <p class="font-semibold text-slate-900">No external login providers configured</p>
                                        <p class="mt-1 text-slate-600">
                                            This project currently uses local accounts only.
                                        </p>
                                        <p class="mt-3 text-xs text-slate-500">
                                            (You can configure external providers later if required.)
                                        </p>
                                    </div>
                        }
                        else
                        {
                                    <form id="external-account"
                                          asp-page="./ExternalLogin"
                                          asp-route-returnUrl="@Model.ReturnUrl"
                                          method="post"
                                          class="space-y-3">

                                        <p class="text-sm text-slate-600">
                                            Choose a provider:
                                        </p>

                                        <div class="flex flex-wrap gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                                    <button type="submit"
                                                            class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50"
                                                            name="provider"
                                                            value="@provider.Name"
                                                            title="Log in using your @provider.DisplayName account">
                                            @provider.DisplayName
                                                    </button>
                                    }
                                        </div>
                                    </form>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Small footer note -->
        <div class="mt-8 text-xs text-slate-500">
            By logging in, you’ll be able to access role-based pages (Member / Trainer / Admin) based on your account.
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
